{
  "app": {
    "background": {
      "scripts": [
        "vendor/es6-shim.js",
        "vendor/jszip.js",
        "vendor/jszip-utils.js",
        "lib/listings.js",
        "lib/dirEntries.js",
        "lib/clobber.js",
        "background.js"]
    }
  },
  "manifest_version": 2,
  "name": "Pull Tool",
  "version": "0.1.0",

  "description": "An app for pulling packages from a remote location.",
  "icons": { "16": "images/pulltool-icon-16px.png",
             "48": "images/pulltool-icon-48px.png",
            "128": "images/pulltool-icon-128px.png" },

  "author": "Stuart P. Bentley",
  "optional_permissions": ["notifications"],
  "permissions": [ "storage", "http://*/", "https://*/",
    {"fileSystem": ["write", "retainEntries", "directory"]}]
}
